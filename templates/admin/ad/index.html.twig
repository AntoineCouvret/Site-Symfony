{% extends 'admin/base.html.twig' %}

{% block title %}Administration | Annonces{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1>Administration des annonces</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Id</th>
      <th scope="col">Titre</th>
      <th scope="col">Auteur</th>
      <th scope="col">RÃ©servation</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  	{% for ad in ads %}
    <tr>
      <th scope="row">{{loop.index0}}</th>
      <td>{{ad.id}}</td>
      <td>{{ad.title}}</td>
      <td>{{ad.author.firstName}} {{ad.author.lastName}}</td>
      <td>{{ad.bookings | length}}</td>
      <td><a href="{# {{path('admin_ads_edit',{'id':ad.id})}} #}" class="btn btn-sm btn-warning"><i class="far fa-edit"></i></a>
      <a href="{{path('admin_ads_delete',{'id':ad.id})}}" class="btn btn-sm btn-danger" onclick="return confirm ('Etes vous certain de vouloir supprimer l\'annonce ?')"><i class="fas fa-trash-alt"></i></a></td>
    </tr>
	{% endfor %}
  </tbody>
</table>

</div>
{% endblock %}
